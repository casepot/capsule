{
  "version": "1.0.0",
  
  "providers": {
    "claude": {
      "enabled": true,
      "model": "opus",
      "timeout_override": 180
    },
    "codex": {
      "enabled": true,
      "model": "gpt-5",
      "reasoning_effort": "high"
    },
    "gemini": {
      "enabled": true,
      "model": "gemini-2.5-pro"
    }
  },
  
  "testing": {
    "enabled": true,
    "command": "uv run pytest -m unit",
    "timeout_seconds": 300
  },
  
  "review": {
    "include_patterns": [
      "src/**/*.py",
      "tests/**/*.py"
    ],
    "exclude_patterns": [
      "**/__pycache__/**",
      "**/*.pyc",
      "**/venv/**",
      "**/node_modules/**"
    ],
    "max_diff_size_kb": 500,
    "max_files": 100
  },
  
  "gating": {
    "enabled": true,
    "must_fix_threshold": 1,
    "block_on_test_failure": true,
    "severity_thresholds": {
      "critical": 0,
      "high": 1,
      "medium": 5,
      "low": 10
    }
  }
}